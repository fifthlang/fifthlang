{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "group": "build",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "clean"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "build-original",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },    
        {
            "label": "run tests",
            "group": "test",
            "type": "shell",
            "command": "dotnet test"
          }
    ]
}
